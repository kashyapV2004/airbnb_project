<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
    <div class="col-lg-8 offset-2">
    <h3 class="mb-3">Create a new List</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title"
             class="form-label">
                Title
            </label>
            <input type="text" 
             name="listing[title]"
             placeholder="Enter Title"
             id="title"
             class="form-control"
            >
        </div>

        <div class="mb-3">
            <label for="description" 
             class="form-label">
                Description
            </label>
            <textarea type="text" 
             name="listing[description]" 
             placeholder="enter description"
             class="form-control">
            </textarea>
        </div>

        <div class="row">
        <div class="mb-3 col-lg-4">
            <label for="image-name"
             class="form-label">
                Image Name
            </label>
            <input type="text" 
             name="listing[image-name]" 
             placeholder="enter image filename"
             class="form-control"
            >
        </div>

        <div class="mb-3 col-lg-8">
            <label for="image-url"
             class="form-label">
                Image Url
            </label>
            <input type="text" 
             name="listing[image-url]" 
             placeholder="enter image-url"
             class="form-control"
            >
        </div>
        </div>

        <div class="row">
        <div class="mb-3 col-lg-6">
            <label for="price"
             class="form-label">
                Price
            </label>
            <input type="number" 
             name="listing[price]" 
             placeholder="enter price"
             class="form-control"
            >
        </div>

        <div class="mb-3 col-lg-6">
            <label for="location"
             class="form-label">
                Location
            </label>
            <input type="text" 
             name="listing[location]" 
             placeholder="enter location"
             class="form-control"
            >
        </div>
        </div>

        <div class="mb-3">
            <label for="country"
             class="form-label">
                Country
            </label>
            <input type="text" 
             name="listing[country]" 
             placeholder="enter country"
             class="form-control" 
            >
        </div>
        <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
    </div>
</div>