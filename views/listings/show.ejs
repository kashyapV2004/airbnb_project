<% layout("/layouts/boilerplate.ejs") %>
<div class="row">

    <div class="col-8 offset-2 mt-3">
        <h3><%=listings.title%></h3>
    </div>
    <div class="card col-6 offset-2 show-card listing-card">
        <img src="<%=listings.image.url%>" class="card-img-top show-image" alt="<%=listings.image.filename%>">

        <div class="card-body">
            <p class="card-text"><i><b>Owned By</b> <%=listings.owner.username %></i></p>
            <p class="card-text"><%=listings.description%></p>
            <p class="card-text">&#8377; <%=listings.price.toLocaleString("en-IN")%></p>
            <p class="card-text"><%=listings.location%></p>
            <p class="card-text"><%=listings.country%></p>       
        </div>
    </div>
    <br>
    <% if(currentUser && listings.owner._id.equals(currentUser._id)){ %>
    <div class="btns mb-3">
        <a class="btn btn-dark col-1 offset-2 edit-btn" href="/listings/<%=listings._id%>/edit">Edit</a>
        <form action="/listings/<%=listings._id%>?_method=DELETE" method="POST">
            <button class="btn btn-dark offset-4">Delete</button>
        </form>
    </div>
    <% } %>

    <!-- Review Section -->
    <div  class="col-8 offset-2 mb-3">
        <% if(currentUser) { %>
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listings._id%>/reviews" method="POST" novalidate class="needs-validation">
            <!-- <div class="mt-3 mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">  
            </div> -->

            <div class="mt-3 mb-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea type="range" cols="30" rows="5" id="comment" name="review[comment]" class="form-control" required></textarea>
                <div class="valid-feedback">Comment looks good.</div>
                <div class="invalid-feedback">Please add some comments for review!</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <% } %>

        <!-- All Reviews -->
        <p><b>All Reviews</b></p>
        <div class="row">
        <% for(review of listings.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%=review.author.username%></h5>
                    <p class="starability-result" data-rating="3">Rated: 3 stars</p>
                    <p class="card-text"><%=review.comment%></p>
                    <p class="card-text"><%=review.rating%> Star</p>
                </div>
                <form class="mb-3" method="POST" action="/listings/<%=listings._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
        <% } %>
        </div>
    </div>
</div>