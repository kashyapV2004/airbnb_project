<% layout("/layouts/boilerplate.ejs") %>
<div class="row">

    <div class="col-8 offset-2 mt-3">
        <h3>Listing Details</h3>
    </div>

    <div class="card col-6 offset-2 mt-3 show-card">
        <img src="<%=listing.image.url%>" class="card-img-top show-image" alt="<%=listing.image.filename%>">

        <div class="card-body">
            <p class="card-text">
                <b><%=listing.title%></b><br>
                <%=listing.description%><br>
                &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
                <%=listing.location%> <br>
                <%=listing.country%>
            </p>
        </div>
    </div>
    <br>
    <div class="btns mb-3">
    <a class="btn btn-dark col-1 offset-2 edit-btn" href="/listings/<%=listing._id%>/edit">Edit</a>

    <form action="/listing/<%=listing._id%>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-4">Delete</button>
    </form>

    </div>
</div>