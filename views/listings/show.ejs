<% layout("/layouts/boilerplate.ejs") %>
<div class="row">

    <div class="col-8 offset-2 mt-3">
        <h3><%=listings.title%></h3>
    </div>
    <div class="card col-6 offset-2 show-card listing-card">
        <img src="<%=listings.image.url%>" class="card-img-top show-image" alt="<%=listings.image.filename%>">

        <div class="card-body">
            <p class="card-text">
                <%=listings.description%><br>
                &#8377; <%=listings.price.toLocaleString("en-IN")%> <br>
                <%=listings.location%> <br>
                <%=listings.country%>
            </p>
        </div>
    </div>
    <br>
    <div class="btns mb-3">
        <a class="btn btn-dark col-1 offset-2 edit-btn" href="/listings/<%=listings._id%>/edit">Edit</a>
        <form action="/listings/<%=listings._id%>?_method=DELETE" method="POST">
            <button class="btn btn-dark offset-4">Delete</button>
        </form>
    </div>
    <div  class="col-8 offset-2 mb-3">
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listings._id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mt-3 mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">  
            </div>

            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea type="range" cols="30" rows="5" id="comment" name="review[comment]" class="form-control" required></textarea>
                <div class="valid-feedback">Comment looks good.</div>
                <div class="invalid-feedback">Please add some comments for review!</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <p><b>All Reviews</b></p>
        <div class="row">
        <% for(review of listings.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Jane Doe</h5>
                    <p class="card-text"><%=review.comment%></p>
                    <p class="card-text"><%=review.rating%> Star</p>
                </div>
                <form class="mb-3" method="POST" action="/listings/<%=listings._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
        <% } %>
        </div>
    </div>
</div>