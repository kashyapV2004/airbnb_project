<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
    <div class="col-lg-8 offset-2">
    <h3 class="mb-3">Edit List</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%=listing.title%>" required>
            <div class="valid-feedback">Title looks good.</div>
            <div class="invalid-feedback">Title should be valid!</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%></textarea>
            <div class="valid-feedback">Description looks good.</div>
            <div class="invalid-feedback">Description should be valid!</div>      
        </div>

        <div class="row">
        <div class="mb-3 col-lg-3">
            <label for="image-name" class="form-label">Image Name</label>
            <input type="text" name="listing[image-name]" class="form-control" value="<%=listing.image.filename%>">
            <div class="valid-feedback">Filename looks good.</div>
            <div class="invalid-feedback">Filename should be valid!</div>
        </div>

        <div class="mb-3 col-lg-9">
            <label for="image-url" class="form-label">Image Url</label>
            <input type="text" name="listing[image-url]" class="form-control" value="<%=listing.image.url%>" required>
            <div class="valid-feedback">Image Url looks good.</div>
            <div class="invalid-feedback">Image Url should be valid!</div>        
        </div>
        </div>

        <div class="row">
        <div class="mb-3 col-lg-6">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control" value="<%=listing.price%>" required>
            <div class="valid-feedback">Price looks good.</div>
            <div class="invalid-feedback">Price should be valid!</div>     
        </div>

        <div class="mb-3 col-lg-6">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%=listing.location%>" required>
            <div class="valid-feedback">Location looks good.</div>
            <div class="invalid-feedback">Location should be valid!</div>        
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control" value="<%=listing.country%>" required>
            <div class="valid-feedback">Country looks good.</div>
            <div class="invalid-feedback">Country should be valid!</div>       
        </div>
        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
    </div>
    </div>