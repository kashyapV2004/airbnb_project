<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
    <div class="col-lg-8 offset-2">
    <h3 class="mb-3">Edit List</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%=listing.title%>">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control"><%=listing.description%></textarea>
        </div>

        <div class="row">
        <div class="mb-3 col-lg-3">
            <label for="image-name" class="form-label">Image Name</label>
            <input type="text" name="listing[image-name]" class="form-control" value="<%=listing.image.filename%>">
        </div>

        <div class="mb-3 col-lg-9">
            <label for="image-url" class="form-label">Image Url</label>
            <input type="text" name="listing[image-url]" class="form-control" value="<%=listing.image.url%>">
        </div>
        </div>

        <div class="row">
        <div class="mb-3 col-lg-6">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control" value="<%=listing.price%>">
        </div>

        <div class="mb-3 col-lg-6">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%=listing.location%>">
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control" value="<%=listing.country%>">
        </div>
        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
    </div>
    </div>