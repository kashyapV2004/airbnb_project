<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
    <div class="col-lg-8 offset-2">
    <h3 class="mb-3">Edit List</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%=listing.title%>" required>
            <div class="valid-feedback">Title looks good.</div>
            <div class="invalid-feedback">Title should be valid!</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%></textarea>
            <div class="valid-feedback">Description looks good.</div>
            <div class="invalid-feedback">Description should be valid!</div>      
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Original image</label><br>
            <img alt="<%=listing.image.filename %>"  src="<%=originalImageUrl%>">        
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" class="form-control">        
        </div>

        <div class="row">
        <div class="mb-3 col-lg-6">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" class="form-control" value="<%=listing.price%>" required>
            <div class="valid-feedback">Price looks good.</div>
            <div class="invalid-feedback">Price should be valid!</div>     
        </div>

        <div class="mb-3 col-lg-6">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%=listing.location%>" required>
            <div class="valid-feedback">Location looks good.</div>
            <div class="invalid-feedback">Location should be valid!</div>        
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control" value="<%=listing.country%>" required>
            <div class="valid-feedback">Country looks good.</div>
            <div class="invalid-feedback">Country should be valid!</div>       
        </div>
        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
    </div>
    </div>